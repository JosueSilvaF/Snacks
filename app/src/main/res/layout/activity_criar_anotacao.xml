<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    android:fillViewport="true"
    tools:context=".activity.CriarAnotacaoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtTituloAnotacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/signika"
            android:hint="Insira o Título aqui..."
            android:textColor="#3E6841"
            android:textColorHint="#3E6841"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/edtTextoAnotacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtTituloAnotacoes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/signika"
            android:hint="Escreva aqui a reação da criança com o alimento..."
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/btnSairAnotacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_botoes"
                android:fontFamily="@font/signika"
                android:text="Voltar"
                android:textColor="@color/black"
                android:textAllCaps="false"
                app:backgroundTint="@color/resposta_errada" />


            <Button
                android:id="@+id/btnSalvarAnotacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_botoes"
                android:fontFamily="@font/signika"
                android:onClick="validarAnot"
                android:text="Salvar"
                android:textAllCaps="false"
                app:backgroundTint="#81CB85" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>