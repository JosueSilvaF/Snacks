<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".activity.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF2E9"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#FFF2E9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/perfil_icon"/>

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nome"
                android:fontFamily="@font/chewy"
                android:textSize="30dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_linear_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Seus Dados:"
                android:fontFamily="@font/signika"
                android:textSize="22dp"
                android:textColor="#023105"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/signika"
                android:text="E-mail:"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/signika"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nome do Bebê:"
                android:fontFamily="@font/signika"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtNomeBebe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/signika"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Data de Nascimento do Bebê:"
                android:fontFamily="@font/signika"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtNascimentoBebe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/signika"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Peso do Bebê:"
                android:fontFamily="@font/signika"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtPesoBebe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/signika"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Altura do Bebê:"
                android:fontFamily="@font/signika"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtAlturaBebe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/signika"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Segurança:"
                android:fontFamily="@font/signika"
                android:textSize="22dp"
                android:textColor="#023105"/>

            <Button
                android:id="@+id/btnAlterarSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"
                android:text="Alterar Senha"
                android:textColor="@color/white"
                android:fontFamily="@font/signika"
                android:textSize="13dp"
                android:textAllCaps="false"
                android:background="@drawable/shape_botoes"
                app:backgroundTint="@color/verdeclaro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Configurações:"
                android:fontFamily="@font/signika"
                android:textSize="22dp"
                android:textColor="#023105"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFotoGaleria"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Alterar Foto (Galeria)"
                    android:textColor="@color/white"
                    android:fontFamily="@font/signika"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:background="@drawable/shape_botoes"
                    app:backgroundTint="@color/verdeclaro"/>

                <Button
                    android:id="@+id/btnFotoCamera"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Alterar Foto (Camera)"
                    android:textColor="@color/white"
                    android:fontFamily="@font/signika"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:background="@drawable/shape_botoes"
                    app:backgroundTint="@color/verdeclaro"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="Sair da Conta"
                android:textColor="#D93F21"
                android:fontFamily="@font/signika"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_sair_da_conta"
                android:background="@drawable/shape_botoes"
                app:backgroundTint="@color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>