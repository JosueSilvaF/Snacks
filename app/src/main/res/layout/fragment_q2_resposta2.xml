<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/fundo"
    tools:context=".fragment.quiz.Q2Resposta2Fragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:text="  2"
            android:textSize="17dp"
            android:fontFamily="@font/signika"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/quiz2_acertou"/>

        <TextView
            android:id="@+id/txtPergunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:justificationMode="inter_word"
            android:text="Qual alimento mais recomendado para começar a introdução alimentar?"
            android:fontFamily="@font/signika"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/btnQ1Resposta1"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cocacola"
            android:background="@drawable/shape_botoes"
            app:backgroundTint="@color/resposta_nao_clicada"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="start" />

        <ImageButton
            android:id="@+id/btnQ1Resposta2"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/batata"
            android:background="@drawable/shape_botoes"
            app:backgroundTint="@color/resposta_certa"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="end"/>

        <ImageButton
            android:id="@+id/btnQ1Resposta3"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/carne_de_hamburguer"
            android:background="@drawable/shape_botoes"
            app:backgroundTint="@color/resposta_nao_clicada"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="start" />

        <ImageButton
            android:id="@+id/btnQ1Resposta4"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/melancia3"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="end"
            android:background="@drawable/shape_botoes"
            app:backgroundTint="@color/resposta_nao_clicada" />

        <Button
            android:id="@+id/btnContinuarQ2Certa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/shape_botoes"
            app:backgroundTint="@color/continuar"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="end"/>

    </GridLayout>

</LinearLayout>