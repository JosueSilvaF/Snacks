<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".fragment.InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGuia"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_botoes"
            android:drawableLeft="@drawable/guia_icon"
            android:fontFamily="@font/signika"
            android:text="Guia"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/guia" />

        <Button
            android:id="@+id/btnAlimentos"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_botoes"
            android:drawableLeft="@drawable/alimentos_icon"
            android:fontFamily="@font/signika"
            android:text="Alimentos"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/alimentos"/>

        <Button
            android:id="@+id/btnReceitas"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_botoes"
            android:drawableLeft="@drawable/receita_icon"
            android:fontFamily="@font/signika"
            android:text="Receitas"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/receitas" />

    </LinearLayout>

</FrameLayout>